script.

    (function (exports) {
        function one2oneDetail() {
            $('.ui.modal.one2one').modal('show');
        }

        function englishCertifcate() {
            $('.ui.modal.english.certificate').modal('show');
        }

        exports.interactives = {
            one2oneDetail: one2oneDetail,
            englishCertificate: englishCertifcate
        };
    })(angular.bplus = angular.bplus || {});

    $(function () {
        $(document).on('click', 'a[ng-href^="javascript:"]', function ($event) {
            $event.preventDefault();
            $event.stopPropagation();
            var action = $(this).attr('ng-href').replace('javascript:', '');
            window.eval(action);
        });
    });