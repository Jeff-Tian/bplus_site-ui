mixin teacherCard(teacher)
    div.column
        div.ui.fluid.card
            div.image(style="background-color: white; padding: 20px;")
                img(src="#{cdn.normal}img/store/#{teacher.image}?#{cdn.version}")
            div.ui.secondary.inverted.segment.center.aligned(style="background-color: #4A4A4A!important;")
                h3.header #{teacher.header}
                div.description #{teacher.description}
mixin redHeader(text)
    div.header(style="background-color: #FC3F48; color: white; text-align: center;") #{text}

mixin grayContent()
    div.image.content(style="background-color: #EFEFEF;")
        block

