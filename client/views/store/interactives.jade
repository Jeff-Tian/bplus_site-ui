script.

    (function (exports) {
        function one2oneDetail() {
            $('.ui.modal.one2one').modal('show');
        }

        function englishCertifcate() {
            $('.ui.modal.english.certificate').modal('show');
        }

        function chineseCertficate() {
            $('.ui.modal.chinese.certificate').modal('show');
        }

        function reportDetail() {
            $('.ui.modal.report').modal('show');

            window.setTimeout(function () {
                console.log('shape');
                $('.shape').shape();
            }, 100);
        }

        function privateClass() {
            $('.ui.modal.private.class').modal('show');
        }

        exports.interactives = {
            one2oneDetail: one2oneDetail,
            englishCertificate: englishCertifcate,
            chineseCertificate: chineseCertficate,
            reportDetail: reportDetail,
            privateClass: privateClass
        };
    })(angular.bplus = angular.bplus || {});

    $(function () {
        $(document).on('click', 'a[ng-href^="javascript:"]', function ($event) {
            $event.preventDefault();
            $event.stopPropagation();
            var action = $(this).attr('ng-href').replace('javascript:', '');
            window.eval(action);
        });

        $(document).on('click', '.report.left.arrow', function ($event) {
            $('.report.shape').shape('flip left');
        });

        $(document).on('click', '.report.right.arrow', function ($event) {
            $('.report.shape').shape('flip right');
        });

        $('.fluid.image').find('img').each(function () {
            var i = new Image();
            i.src = $(this).attr('src');
        });
    });