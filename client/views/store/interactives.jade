mixin teacherCard(teacher)
    div.column
        div.ui.fluid.card
            div.image(style="background-color: white; padding: 20px;")
                img(src="#{cdn.normal}img/store/#{teacher.image}?#{cdn.version}")
            div.content.center.aligned.centered(style="background-color: #4A4A4A!important;")
                a.header(style="color: white!important;") #{teacher.header}
                div.meta
                    span.date(style="color: #aaa!important;") #{teacher.description}
                div.description(style="color: white!important;") #{teacher.description2}
mixin redHeader(text)
    div.header(style="background-color: #FC3F48; color: white; text-align: center;") #{text}

mixin grayContent()
    div.image.content(style="background-color: #EFEFEF;")
        block

mixin hotLine()
    div &nbsp;
    div 客服热线：400-9200-152（工作日10:00 - 18:00）

mixin classIntro()
    div.ui.equal.width.grid(style="color: red;")
        div.equal.width.row
            div.column
                div.ui.segment.center.aligned 赛后点评
            div.column
                div.ui.segment.center.aligned 市场营销
            div.column
                div.ui.segment.center.aligned 战略管理
        div.equal.width.row
            div.column
                div.ui.segment.center.aligned 数据分析
            div.column
                div.ui.segment.center.aligned 团队合作
            div.column
                div.ui.segment.center.aligned 职业生涯辅导
        div.equal.width.row
            div.column
                div.ui.segment(style="color: #838383;")
                    div 使用流程:
                    div 1. 在导师平台挑选你喜欢的话题和合适的时间完成订单。
                    div 2. 在既定的时间完成上课。
                    div 3. 课程结束后给予老师评价。
                    + hotLine()

