+ errorForm('savingCorpDescription')(name="descriptionForm", ng-submit="saveCorpDescription()")
    form-error
    div.field
        label 一句话公司宣传标语
        input(type="text", name="slogan", ng-model="corpProfile.slogan")
    div.field
        label 公司简介
        textarea(name="description", rows="5", ng-model="corpProfile.abstraction")
        div.ui.bottom.attached.segment
            div.inline.field
                label
                    i.tags.icon
                    span 标签
                input(type="text", name="tags", ng-model="corpProfile.tags")
    div.field
        button.ui.red.button(type="submit") 保存
        button.ui.basic.button(type="reset", ng-click="errorMessages = []") 取消